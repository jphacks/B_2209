generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    Int     @id @default(autoincrement())
  account String  @unique
  name  String?
  icon String
  posts Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  category     String?
  content   String?
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int?
}
